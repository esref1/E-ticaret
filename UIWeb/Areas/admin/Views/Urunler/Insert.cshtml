@model Entities.Products;
<a href="/admin/Urunler" class="btn btn-primary" style="margin-bottom:15px;"> Geri Git</a>

<form action="/admin/urunler/Insert" method="post" enctype="multipart/form-data">
    <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
        <div class="col-md-12">Ana Resim :</div>
        <input type="file" name="MainImages" class="form-control" />
    </div>

    <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
        <div class="col-md-12">Ürün Adı :</div>
        <input type="text" asp-for="Name" class="form-control" placeholder="Ürün Adı" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
        <div class="col-md-12">Stok :</div>
        <input type="text" asp-for="Stock" class="form-control" placeholder="Stok" />
        <span asp-validation-for="Stock"></span>
    </div>

    <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
        <div class="col-md-12">Satış Fiyatı :</div>
        <input type="text" asp-for="Price" class="form-control" placeholder="Satış Fiyatı" />
        <span asp-validation-for="Price"></span>
    </div>

    <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
        <div class="col-md-12">Kategori Seç :</div>
        <select class="form-control" name="CategoriesId" style="margin-bottom:10px;">
            @foreach (var item in ViewBag.Kategoriler)
            {
                <option value="@item.Id">@item.Name</option>
            }

        </select>
    </div>



    <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
        <div class="col-md-12">Açıklama :</div>
        <textarea type="text" asp-for="Explanation" class="form-control" placeholder="Ürün Açıklama" style="height:250px"> </textarea>
        <span asp-validation-for="Explanation"></span>
    </div>



    <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
        <div class="col-md-12">Ürün Durumu :</div>
        <select class="form-control" name="Status" style="margin-bottom:10px;">
            <option value="True">Aktif</option>
            <option value="False">Pasif</option>
        </select>
    </div>

    <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
        <div class="col-md-12">Detay Resimleri :</div>
        <input type="file" name="resimler" id="resimler" class="form-control" multiple />
    </div>

    <button type="submit" id="clickKaydet" class="btn btn-primary">Kaydet</button>
</form>

<div class="col-md-12" style="margin-top:15px;">
    @if (ViewBag.Message != null)
    {
        if (ViewBag.Message.StatusCode == Core.Results.ComplexTypes.StatusCode.Success)
        {
            <div class="alert alert-success">@ViewBag.Message.UserMessage</div>
        }
        else
        {
            <div class="alert alert-danger">@ViewBag.Message.UserMessage</div>
        }
    }
</div>