<a href="/admin/Kategoriler" class="btn btn-primary" style="margin-bottom:15px;">Geri Git</a>

<form action="/admin/Kategoriler/Update/@Model.Id" method="post">
    <input type="text" placeholder="Kategori Adı" name="Name" class="form-control" style="margin-bottom:10px;" value="@Model.Name" />
    <select class="form-control" name="Status" style="margin-bottom:10px;">
        @if (Model.Status)
        {
            <option value="True">Aktif</option>
            <option value="False">Pasif</option>
        }
        else
        {
            <option value="False">Pasif</option>
            <option value="True">Aktif</option>
        }
    </select>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
<div class="col-md-12" style="margin-top:15px;">
    @if (ViewBag.Message != null)
    {
        if (ViewBag.Message.StatusCode == Core.Results.ComplexTypes.StatusCode.Success)
        {
            <div class="alert alert-success">@ViewBag.Message.UserMessage</div>
        }
        else
        {
            <div class="alert alert-danger">@ViewBag.Message.UserMessage</div>
        }
    }
</div>